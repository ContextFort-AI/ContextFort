{
  "manifest_version": 3,
  "name": "ContextFort Security",
  "version": "2.0.0",
  "description": "POST request monitoring and AI-powered click detection for enhanced security",

  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "notifications"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    {
      "resources": ["icon128.png", "dashboard/**"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "128": "icon128.png"
  }
}
