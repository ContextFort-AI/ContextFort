{
  "manifest_version": 3,
  "name": "ContextFort - Security Suite",
  "version": "1.0.0",
  "description": "POST request monitoring, AI click detection, and screenshot auto-blur protection",

  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "notifications"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["page-script.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    {
      "resources": ["html2canvas.min.js", "icon128.png"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "128": "icon128.png"
  }
}
